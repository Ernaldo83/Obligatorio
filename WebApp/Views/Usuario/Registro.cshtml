@using Dominio.Entidades
@model Cliente

<form method="post" class="formularioLogin col-6 col-xl-4  row justify-content-center">  @*   action="/Usuario/NuevoCliente" *@
    <h2>Registro de usuario</h2>
    <label>Ingrese Nombre</label><br>
    <input type="text"  name="Nombre" value="@Model.Nombre">
    <label>Ingrese Apellido</label><br>
    <input type="text"  name="Apellido" value="@Model.Apellido">
    <label>Ingrese Correo</label><br>
    <input type="text"  name="Email" value="@Model.Email">
    <label>Ingrese Contraseña</label>
    <input type="text"  name="Password" value="@Model.Password">
    <label>Ingrese Saldo Inicial</label><br>
    <input type="number"  name="SaldoBilletera" value="@Model.SaldoBilletera">
    <input type="submit" class="my-2 btn-focus col-5" value="REGISTRAR">
    <a class="my-2 btn-focus col-5" asp-area="" asp-controller="index" asp-action="index" id="salir">Salir</a>
  

</form>
@if (ViewBag.msj != null && ViewBag.msj.ToString() != "")
{
    <div class="toast-container position-fixed bottom-0 end-0 p-3">
        <div class="toast bg-danger text-white" role="alert" aria-live="assertive" aria-atomic="true" id="myToast">
            <div class="toast-header text-white bg-danger">
                <strong class="me-auto">FOCUS</strong>
                <small>Web Store</small>
                <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
            <div class="toast-body bg-white text-dark">
                @ViewBag.msj
            </div>
        </div>
    </div>
}